<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Topic</th>
      <th>URLs</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
        <td><%= topic.urls.join(', ') %></td>
        <td>
          <%= link_to(topic) do -%><span class="glyphicon glyphicon-eye-open"></span><% end %>
          <%= link_to(edit_topic_path(topic)) do -%><span class="glyphicon glyphicon-edit"></span><% end %>
          <%= link_to(topic, method: :delete, data: { confirm: "Are you sure you want to delete?\n\n#{topic.name}" }) do -%>
              <span class="glyphicon glyphicon-trash"></span>
          <% end %>
          <%= link_to("/#{topic.name}") do -%>
              <span class="glyphicon glyphicon-play"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path %>
